{
    "background": {
        "scripts": [
            "scr/jquery.js",
			"index.js"		
        ]
    },
    "manifest_version": 2,
    "name": "STEmarketcsgo_v1.09",
    "description": "STEmarketcsgo_v1.09",
    "version": "1.09",	
    "icons": {      
	  "512": "ico/ico.png"
    },			
    "browser_action": {
        "default_page": "index.html"
    },
    "content_scripts": [{
            "all_frames": true,
            "js": [
                "scr/script_market.js",
                "scr/jquery.js"
            ],
            "matches": ["https://market.csgo.com/*"],
            "run_at": "document_end"
        },
        {
            "all_frames": true,
            "js": [
			"scr/jquery.js",                                
			"scr/script_listings.js"
            ],
			"css":["scr/site.css"],
            "matches": ["https://steamcommunity.com/market/listings/*"],
            "run_at": "document_end"
        },
        {
            "all_frames": true,
            "js": [
                "scr/script_market_steam.js",
                "scr/jquery.js"
            ],
            "matches": ["https://steamcommunity.com/market/"],
            "run_at": "document_end"
        }
    ],    
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "https://steamcommunity.com/*",
		"http://steamtradeextensionz.ru/*",
		"https://market.csgo.com/*",
		"http://localhost:3001/*",
		"http://192.162.101.84:3001/*",		
        "notifications",
        "cookies",
        "tabs",
        "browsingData",
        "storage"
    ]
}